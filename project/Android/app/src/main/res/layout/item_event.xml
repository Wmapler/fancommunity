<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_event_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingHorizontal="25dp">
    <TextView
        android:id="@+id/item_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题："
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/item_event_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="活动发布时间:2023-04-25"
        android:textSize="10sp"
        android:textColor="@color/gray">
    </TextView>
    <TextView
        android:id="@+id/item_event_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="10sp"
        android:text="活动结束时间:2023-04-26"
        android:textColor="@color/gray">
    </TextView>
    <TextView
        android:id="@+id/item_event_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正文"
        android:textSize="15sp"
        android:textColor="@color/brown"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/item_notice_content" />
</LinearLayout>